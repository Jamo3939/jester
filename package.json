{
  "name": "@scotia/jester",
  "version": "0.0.0",
  "description": "Jest Helpers provides some extra functionality to simplify writing your unit tests.",
  "scripts": {
    "lint": "eslint *.js src",
    "test": "jest src",
    "test:watch": "npm run test -- --watch",
    "babel": "babel src --out-dir dist",
    "clean": "shx rm -rf dist",
    "copy": "shx cp package.json README.md dist",
    "build": "npm run clean && npm run lint && npm run test && npm run babel && npm run copy"
  },
  "devDependencies": {
    "babel-cli": "6.24.0",
    "babel-core": "6.24.0",
    "babel-eslint": "7.2.1",
    "babel-plugin-module-resolver": "2.7.0",
    "babel-plugin-transform-object-rest-spread": "6.23.0",
    "babel-polyfill": "6.23.0",
    "babel-preset-env": "1.3.2",
    "babel-preset-react": "6.23.0",
    "eslint": "3.19.0",
    "eslint-config-standard": "7.1.0",
    "eslint-plugin-promise": "3.5.0",
    "eslint-plugin-react": "6.10.3",
    "eslint-plugin-standard": "2.1.1",
    "jest": "19.0.2",
    "lodash": "4.17.4",
    "react": "15.4.2",
    "react-test-renderer": "15.4.2",
    "shx": "0.2.2",
    "styled-components": "1.4.4"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
